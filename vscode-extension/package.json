{
  "name": "vibe-coding-progress-bar",
  "displayName": "Vibe Coding Progress Bar",
  "description": "Track AI coding progress in real-time with a floating progress bar",
  "version": "0.1.0",
  "publisher": "vibe-coding",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Vibe Coding Progress Bar",
      "properties": {
        "vibeCodingProgressBar.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI task progress tracking"
        },
        "vibeCodingProgressBar.host": {
          "type": "string",
          "default": "localhost",
          "description": "Host for progress bar connection"
        },
        "vibeCodingProgressBar.port": {
          "type": "number",
          "default": 31415,
          "description": "Port for progress bar WebSocket connection"
        },
        "vibeCodingProgressBar.updateInterval": {
          "type": "number",
          "default": 1000,
          "description": "Progress update interval in milliseconds"
        },
        "vibeCodingProgressBar.copilot.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Track GitHub Copilot activity"
        },
        "vibeCodingProgressBar.claudeCode.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Track Claude Code activity"
        },
        "vibeCodingProgressBar.cursor.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Track Cursor AI activity"
        }
      }
    },
    "commands": [
      {
        "command": "vibeCodingProgressBar.toggle",
        "title": "Toggle Progress Bar Visibility",
        "category": "Vibe Coding"
      },
      {
        "command": "vibeCodingProgressBar.resetAll",
        "title": "Reset All Progress",
        "category": "Vibe Coding"
      },
      {
        "command": "vibeCodingProgressBar.connect",
        "title": "Connect to Progress Bar",
        "category": "Vibe Coding"
      },
      {
        "command": "vibeCodingProgressBar.disconnect",
        "title": "Disconnect from Progress Bar",
        "category": "Vibe Coding"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vibe-coding-progress",
          "title": "Vibe Coding",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": [
      {
        "type": "webview",
        "id": "vibeCodingProgressBar.status",
        "name": "Status",
        "visibility": "visible"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "ws": "^8.14.0"
  }
}
